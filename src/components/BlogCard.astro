---
interface Props {
  title: string;
  date: Date;
  featuredImage?: string;
  excerpt?: string;
  slug: string;
}

const { title, date, featuredImage, excerpt, slug } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="blog-card">
  <a href={`/blog/${slug}`}>
    {featuredImage && <img src={featuredImage} alt={title} loading="lazy" />}
    <div class="blog-card-body">
      <h3 class="blog-card-title">{title}</h3>
      <p class="blog-card-date">{formattedDate}</p>
      {excerpt && <p class="blog-card-excerpt">{excerpt}</p>}
    </div>
  </a>
</article>
